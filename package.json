{
  "name": "QSim",
  "version": "1.0.0",
  "description": "Qsim is the implementation of the quantum computer simulator which is based on python&Node.js. Numpy is used for kernel computing and electron framework is used for interface",
  "main": "main.js",
  "scripts": {
    "test": "pytest --disable-warnings",
    "start": "electron ./main.js --inspect=5858",
    "build-server": "pyinstaller server.spec",
    "pack-app": "electron-builder --win --x64"
  },
  "build": {
    "productName": "QSim",
    "directories": {
      "output": "build_output"
    },
    "files": [
      "main.js",
      "dist",
      "gen-nodejs",
      "assets",
      "main-process",
      "render-process",
      "index.html",
      "node_modules",
      "_config.yml",
      "package.json"
    ],
    "appId": "com.scu.qsim",
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "favicon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "author": "regaliastar",
  "license": "ISC",
  "devDependencies": {
    "electron": "^10.1.6",
    "electron-builder": "^22.9.1",
    "glob": "^7.1.6",
    "thrift": "^0.13.0-hotfix.1",
    "yamljs": "^0.3.0"
  },
  "dependencies": {
    "glob": "^7.1.6",
    "thrift": "^0.13.0-hotfix.1",
    "yamljs": "^0.3.0"
  }
}
